<header class="bg-graphite w-full sticky top-0 text-ice-main z-50" >
    <div class="w-full max-w-[1920px] h-16 grid grid-cols-3 mx-auto my-0 font-lato">
        <a href="/" class="w-[300px] text-ice-main text-2xl font-lato font-black col-start-1 self-center ml-12 lg:ml-8 sm:ml-3"> Gustavo Soares </a>

        <nav class="lg:w-[300px] ph:hidden col-start-2 lg:col-start-3 self-center justify-self-center lg:justify-self-end select-none">
            {% for item in navigation.items %}
                <a href="{{ item.url }}" class="text-center font-bold text-lg px-3 py-2 rounded-[0.25rem] hover:bg-graphite-hover transition duration-[50ms]">{{ item.text }}</a>
            {% endfor %}
        </nav>

        {# <a href="/blog" class="self-center justify-self-end mr-12 px-3 py-2 rounded-[0.25rem] hover:bg-graphite-hover transition duration-[50ms]">Blog</a> #}
    </div>

</header>
